<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/relative_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/img_user_order"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_5sdp"
            />


        <RelativeLayout
            android:id="@+id/relative_about_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/img_user_order"
            android:layout_margin="@dimen/_5sdp"
            android:layout_above="@id/quantity_number_of_product"
            >

            <TextView
                android:id="@+id/txt_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_person"
                android:drawablePadding="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/txt_phone_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_phone"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <NumberPicker
            android:id="@+id/quantity_number_of_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_user_order"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            />


        <Button
            android:id="@+id/btn_send_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Order"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/quantity_number_of_product"
            />


    </RelativeLayout>
</layout>